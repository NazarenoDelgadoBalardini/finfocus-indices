{
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "Nombre del usuario"
    },
    "lastName": {
      "type": "string",
      "description": "Apellido del usuario"
    },
    "phone": {
      "type": "string",
      "description": "Teléfono del usuario"
    },
    "company": {
      "type": "string",
      "description": "Empresa del usuario"
    },
    "position": {
      "type": "string",
      "description": "Cargo del usuario"
    },
    "userRoles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "FINFOCUS_START",
          "FINFOCUS",
          "FINFOCUS_PREMIUM",
          "FINLEGAL_ESENCIAL",
          "FINLEGAL_PLUS",
          "FINLEGAL_TOTAL"
        ]
      },
      "description": "Roles/Planes del usuario en la plataforma (puede tener múltiples)",
      "default": []
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "description": "Si el usuario está activo"
    },
    "notes": {
      "type": "string",
      "description": "Notas administrativas sobre el usuario"
    },
    "preferences": {
      "type": "string",
      "description": "Preferencias del usuario (JSON stringificado con theme, language, dateFormat)"
    },
    "notificationSettings": {
      "type": "string",
      "description": "Configuración de notificaciones del usuario (JSON stringificado)"
    }
  }
}
