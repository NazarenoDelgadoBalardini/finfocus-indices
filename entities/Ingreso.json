{
  "type": "object",
  "properties": {
    "concepto": {
      "type": "string",
      "maxLength": 200,
      "description": "Concepto o descripción del ingreso"
    },
    "monto": {
      "type": "number",
      "description": "Monto del ingreso en pesos"
    },
    "categoria": {
      "type": "string",
      "enum": [
        "Sueldo",
        "Honorarios",
        "Alquileres",
        "Ventas",
        "Intereses",
        "Otros"
      ],
      "description": "Categoría del ingreso"
    },
    "fecha": {
      "type": "string",
      "format": "date",
      "description": "Fecha del ingreso"
    },
    "metodoPago": {
      "type": "string",
      "enum": [
    "Efectivo",
    "Transferencia",
    "Depósito",
    "Cheque",
    "Débito",
    "Crédito",
    "Otro"
      ],
      "description": "Forma en que se percibió el ingreso"
    },
    "notas": {
      "type": "string",
      "maxLength": 500,
      "description": "Notas adicionales sobre el ingreso"
    },
    "esRecurrente": {
      "type": "boolean",
      "description": "Indica si es un ingreso recurrente"
    }
  },
  "required": ["concepto", "monto", "categoria", "fecha"]
}