{
  "type": "object",
  "properties": {
    "userId": { 
      "type": "string", 
      "description": "ID del usuario" 
    },
    "title": { 
      "type": "string", 
      "description": "Título del evento" 
    },
    "description": { 
      "type": "string", 
      "description": "Descripción del evento" 
    },
    "startDate": { 
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de inicio" 
    },
    "endDate": { 
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de fin" 
    },
    "location": { 
      "type": "string", 
      "description": "Ubicación del evento" 
    },
    "caseId": { 
      "type": "string", 
      "description": "ID del juicio relacionado (opcional)" 
    },
    "reminderMinutes": { 
      "type": "number",
      "description": "Minutos antes para recordatorio" 
    },
    "color": { 
      "type": "string",
      "default": "blue",
      "description": "Color del evento en el calendario" 
    },
    "isAllDay": { 
      "type": "boolean",
      "default": false,
      "description": "Si es un evento de todo el día" 
    },
    "meetingLink": {
      "type": "string",
      "description": "Link de reunión virtual (Zoom/Meet)"
    },
    "meetingPassword": {
      "type": "string",
      "description": "Contraseña de acceso a la reunión"
    }
  }
}