{
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "Nombre del usuario"
    },
    "lastName": {
      "type": "string",
      "description": "Apellido del usuario"
    },
    "phone": {
      "type": "string",
      "description": "Teléfono del usuario"
    },
    "company": {
      "type": "string",
      "description": "Empresa del usuario"
    },
    "position": {
      "type": "string",
      "description": "Cargo del usuario"
    },
    "userRoles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Roles/Planes del usuario en la plataforma (puede tener múltiples)",
      "default": ["FREE_USER"]
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "description": "Si el usuario está activo"
    },
    "trialStartDate": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de inicio del período de prueba"
    },
    "trialEndDate": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de finalización del período de prueba"
    },
    "trialUsed": {
      "type": "boolean",
      "default": false,
      "description": "Si el usuario ya utilizó su período de prueba"
    },
    "notes": {
      "type": "string",
      "description": "Notas administrativas sobre el usuario"
    },
    "preferences": {
      "type": "string",
      "description": "Preferencias del usuario (JSON stringificado con theme, language, dateFormat)"
    },
    "notificationSettings": {
      "type": "string",
      "description": "Configuración de notificaciones del usuario (JSON stringificado)"
    }
  }
}