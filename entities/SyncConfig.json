{
  "type": "object",
  "properties": {
    "googleSheets": {
      "type": "array",
      "description": "Lista de Google Sheets a sincronizar",
      "items": {
        "type": "object",
        "properties": {
          "sheetId": {
            "type": "string",
            "description": "ID del Google Sheet"
          },
          "name": {
            "type": "string",
            "description": "Nombre descriptivo del sheet"
          },
          "isActive": {
            "type": "boolean",
            "default": true,
            "description": "Si este sheet está activo para sincronización"
          },
          "individualSheets": {
            "type": "array",
            "description": "Lista de hojas individuales dentro del Google Sheet",
            "items": {
              "type": "object",
              "properties": {
                "sheetName": {
                  "type": "string",
                  "description": "Nombre de la hoja (ej: RIPTE, IPC)"
                },
                "gid": {
                  "type": "string",
                  "description": "GID de la hoja específica (opcional)"
                },
                "isActive": {
                  "type": "boolean",
                  "default": true,
                  "description": "Si esta hoja está activa para sincronización"
                }
              }
            }
          }
        }
      }
    },
    "integrationName": {
      "type": "string",
      "description": "Nombre de la integración de Google Drive configurada"
    },
    "syncIntervalMinutes": {
      "type": "number",
      "default": 1,
      "description": "Intervalo de sincronización en minutos"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "description": "Si la sincronización automática está activa"
    },
    "lastSyncDate": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de la última sincronización exitosa"
    },
    "lastSyncStatus": {
      "type": "string",
      "enum": ["success", "error", "pending"],
      "description": "Estado de la última sincronización"
    },
    "lastSyncError": {
      "type": "string",
      "description": "Mensaje de error de la última sincronización si falló"
    },
    "totalSyncs": {
      "type": "number",
      "default": 0,
      "description": "Total de sincronizaciones realizadas"
    }
  }
}