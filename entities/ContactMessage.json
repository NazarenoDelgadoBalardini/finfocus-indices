{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "description": "Nombre completo del contacto"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email del contacto"
    },
    "category": {
      "type": "string",
      "enum": ["Soporte técnico", "Consultas comerciales", "Sugerencias", "Reportar un problema", "Otro"],
      "description": "Categoría de la consulta"
    },
    "subject": {
      "type": "string",
      "maxLength": 300,
      "description": "Asunto del mensaje"
    },
    "message": {
      "type": "string",
      "maxLength": 5000,
      "description": "Mensaje completo"
    },
    "status": {
      "type": "string",
      "enum": ["Pendiente", "En revisión", "Respondido", "Cerrado"],
      "default": "Pendiente",
      "description": "Estado del mensaje"
    },
    "adminNotes": {
      "type": "string",
      "maxLength": 2000,
      "description": "Notas internas del administrador"
    }
  },
  "required": ["name", "email", "category", "subject", "message"]
}